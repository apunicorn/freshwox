!!!
%html
	%head
		%title Add New Walk
		%link{:href=>"index_add.css", :rel=>"stylesheet", :type=>"text/css"}
		%script{:src=>"http://maps.google.com/maps/api/js?sensor=false", :type=>"text/javascript"}
		%script{:src=>"jquery-1.4.2.min.js", :type=>"text/javascript"}
		%script{:src=>"mapTest.js", :type=>"text/javascript"}
		%body{ :onload => "initialize()" }
			%div#centerdiv{ :style=>"" }
				%p.title
					%a{:href=>"/"} Home
					%div.orangebox
						%form#walkForm{:method=>"POST",:action=>"/add"}
							- if @message4
								%h4= @message4
							%div.yellowbubble{:style=>"z-index:1; visibility:show;"}			
								%h2 Walk Name:
								%p							
								%input.namebox{:type=>"text", :name=>"walkname", :maxlength=>"15"}
								%p
							%div.yellowbubblebig{:style=>"z-index:1; visibility:show;"}
								%h2 Description:
								%textarea.description{:name=>"description", :cols=>22, :rows=>7, :maxlength=>"260"}
							&nbsp
							%p
							%div.yellowbubblehuge{:style=>"z-index:1; visibility:show;"}
								%h2 Start:
								%p
								%input#start.startbox{:type=>"text", :name=>"start"}
								%span#startErr
								%input#start_lat{:type=>"hidden", :name=>"start_lat"}
								%input#start_lng{:type=>"hidden", :name=>"start_lng"}
								%input#waypoints{:type=>"hidden", :name=>"waypoints", :value=>""}
								%input#directions{:type=>"hidden", :name=>"directions", :value=>""}
								%input#distance{:type=>"hidden", :name=>"distance", :value=>""}
								
								%a.lookup{:href=>"#map", :onclick=>"new_start()"} Lookup address
					
							%div#map_canvas{ :style=>"width: 500px; height: 400px" }
							%a{ :name => "map" }
								%div#panel
							&nbsp
							&nbsp
							%p.submitbutton
								%a{:href=>'#',:onclick=>"document.forms[0].submit()"} submit
							%table{:cellpadding=>"0",:cellspacing=>"4",:border=>"0"}
								%tr
									%td
										%h3= @message5
									%td
										%h3= @message1
									%td
										%h3= @message2
									%td
										%h3= @message3
										
